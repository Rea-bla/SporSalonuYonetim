@{
    Layout = "_Layout";
    ViewData["Title"] = "Kariyer";
}

@* 1. Başlık Bölümü (Geçişli Arka Plan) *@
<section class="bg-gradient-to-b from-[#2a3a4a] to-[#1a1a1a] py-12">
    <div class="max-w-7xl mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">KARİYER</h1>
    </div>
</section>

@* 2. Ana İçerik Bölümü (Düz Koyu Arka Plan) *@
<div class="min-h-screen bg-[#1a1a1a] py-16">
    <div class="max-w-7xl mx-auto px-4">

        <div class="bg-[#1f1f1f] rounded-lg p-8 border border-[#333]">
            <h2 class="text-2xl font-bold text-[#ff9933] mb-4">MY FIT'te Kariyer Fırsatları</h2>
            <p class="text-white mb-6">
                MY FIT ailesine katılmak için açık pozisyonları kontrol edin. Dinamik ve yaratıcı bir ekip içinde büyüme
                fırsatı bul.
            </p>

            @* AÇIK POZİSYONLAR *@
            <div class="space-y-4">
                <div class="border-l-4 border-[#ff9933] pl-4 py-2">
                    <h3 class="text-[#ff9933] font-bold">Fitness Antrenörü</h3>
                    <p class="text-gray-300">Birden fazla şubede</p>
                </div>
                <div class="border-l-4 border-[#ff9933] pl-4 py-2">
                    <h3 class="text-[#ff9933] font-bold">Resepsiyon Görevlisi</h3>
                    <p class="text-gray-300">Şube Müdürü yardımcısı pozisyonları</p>
                </div>
                <div class="border-l-4 border-[#ff9933] pl-4 py-2">
                    <h3 class="text-[#ff9933] font-bold">Beslenme Danışmanı</h3>
                    <p class="text-gray-300">Online ve yüz yüze hizmet</p>
                </div>
            </div>

            @* KALDIRILAN BUTONUN YERİNE E-POSTA BİLGİSİ KOYALIM *@
            <p class="text-white mt-8 text-lg font-semibold">
                Başvurularınızı lütfen <a href="mailto:myfit4458@gmail.com" class="text-[#ff9933] hover:underline">myfit4458@gmail.com</a> adresine gönderiniz.
            </p>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}