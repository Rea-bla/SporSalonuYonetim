@{
    // Layout'u "_Layout" olarak ayarlıyoruz. Bu, menü ve footer'ın gelmesini sağlar.
    Layout = "_Layout";

    ViewData["Title"] = "İletişim";
}

@* Form gönderildiğinde başarı mesajı gösterme yeri *@
@if (ViewData["BasariMesaji"] != null)
{
    <div class="bg-green-600 text-white p-4 mb-4 rounded font-bold text-center max-w-7xl mx-auto">
        @ViewData["BasariMesaji"]
    </div>
}

<div class="bg-[#0a0a0a] min-h-screen">
    @* Bu div, Layout'tan gelen body etiketinin hemen altına yerleşir. *@
    <section class="bg-gradient-to-b from-[#2a3a4a] to-[#1a1a1a] py-12">
        <div class="max-w-7xl mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">İLETİŞİM</h1>
        </div>
    </section>

@* 2. Alt (Asıl İçerik) Bölümü *@
    <div class="min-h-screen bg-[#1a1a1a] py-16">
        @* Alt bölüme düz koyu renk verdik *@
        <div class="max-w-7xl mx-auto px-4">

            @* Başarı Mesajı (Burada kalacak) *@
            @if (ViewData["BasariMesaji"] != null)
            {
                <div class="bg-green-600 text-white p-4 mb-4 rounded font-bold text-center">
                    @ViewData["BasariMesaji"]
                </div>
            }
                
        <div class="grid md:grid-cols-2 gap-8">

            @* SOL SÜTUN: İletişim Bilgileri *@
            <div class="bg-[#1f1f1f] rounded-lg p-8 border border-[#333]">
                <h2 class="text-2xl font-bold text-[#ff9933] mb-6">Bize Ulaşın</h2>

                @* TÜM İÇERİĞİ KAPSAYAN BU DİV'E ZORLA BEYAZ RENGİ EKLEYİN *@
                <div class="space-y-4 text-white">

                    <div>
                        <h3 class="text-[#ff9933] font-bold mb-2">Telefon</h3>
                        <div class="space-y-2">
                            <p>
                                <a href="tel:+905466316676" class="hover:text-[#ff9933] transition">0546 631 6676</a>
                            </p>
                            <p>
                                <a href="tel:+905462346842" class="hover:text-[#ff9933] transition">0546 234 68 42</a>
                            </p>
                            <p>
                                <a href="tel:+905411005805" class="hover:text-[#ff9933] transition">0541 100 58 05</a>
                            </p>
                        </div>
                    </div>

                    <div>
                        <h3 class="text-[#ff9933] font-bold mb-2">Email</h3>
                        <p>myfit4458@gmail.com.tr</p>
                    </div>

                    @* ... Adres ve Çalışma Saatleri devamı ... *@

                </div> @* space-y-4 kapanışı *@
            </div> @* Sol sütun kapanışı *@

            @* SAĞ SÜTUN: Mesaj Gönderme Formu *@
            <div class="bg-[#1f1f1f] rounded-lg p-8 border border-[#333]">
                <h2 class="text-2xl font-bold text-[#ff9933] mb-6">Mesaj Gönder</h2>
                <form asp-controller="Iletisim" asp-action="Gonder" method="post" class="space-y-4">
                    <input type="text"
                           placeholder="Adınız"
                           name="Adiniz"
                           class="w-full bg-[#0a0a0a] text-white border border-[#333] rounded px-4 py-2 focus:outline-none focus:border-[#ff9933]" />

                    <input type="email"
                           placeholder="E-posta"
                           name="Email"
                           class="w-full bg-[#0a0a0a] text-white border border-[#333] rounded px-4 py-2 focus:outline-none focus:border-[#ff9933]" />

                    <textarea placeholder="Mesajınız"
                              name="Mesaj"
                              rows="4"
                              class="w-full bg-[#0a0a0a] text-white border border-[#333] rounded px-4 py-2 focus:outline-none focus:border-[#ff9933]"></textarea>

                    <button type="submit"
                            class="w-full bg-[#ff9933] text-white px-6 py-3 font-bold rounded hover:bg-orange-400 transition">
                        Gönder
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}